{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc.exe build active file", // This label matches the preLaunchTask
      "command": "C:\\msys64\\mingw64\\bin\\gcc.exe", // Path to your compiler
      "args": [
        "-g", // Include debug symbols
        "-Wall", // Enable all warnings
        "${file}", // The file to compile (e.g., main.c)
        "-o", // Output flag
        "${fileDirname}\\${fileBasenameNoExtension}.exe" // The output executable
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}